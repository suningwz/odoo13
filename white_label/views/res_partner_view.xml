<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_form_inherit_white_label" model="ir.ui.view">
            <field name="name">view.partner.form.inherit.white.label</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml"> 
                <field name="city" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>

        <record id="view_partner_structured_form_inherit_white_label" model="ir.ui.view">
            <field name="name">view.partner.structured.form.inherit.white.label</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_address_extended.view_partner_structured_form"/>
            <field name="arch" type="xml">
                <field name="street_name" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>